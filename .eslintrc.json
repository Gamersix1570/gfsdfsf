{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "ignorePatterns": [
        "node_modules/",
        ".git/"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-empty-function": "off",
        "class-methods-use-this": "off",
        "default-case": "off",
        "import/prefer-default-export": "off",
        "import/extensions": "off",
        "import/no-unresolved": "off",
        "import/order": "off",
        "lines-between-class-members": [
            "error",
            "always",
            {
                "exceptAfterSingleLine": true
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-restricted-syntax": "off",
        "no-restricted-globals": "off",
        "no-continue": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "max-len": "off",
        "arrow-parens": "off",
        "no-unused-expressions": [
            "error",
            {
                "allowTernary": true
            }
        ],
        "require-await": "error",
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true
            }
        ]
    }
}
